@import 'vars'
@import 'mixins'


input, textarea, a
    &:focus, &:active
        outline 0

ul, li
    list-style none
    
a, a:focus, a:active, a:link, a:visited
    text-decoration none
    tr color 400ms ease
    &:hover, &.active
        color lightcoral
    span
        display inline-block
        vertical-align middle
    img
        display inline-block
        vertical-align middle
        height 100%
        margin-right $pad-tiny
        

        
           
.iphone-sketch
//    display none
    position absolute auto auto 0 50%
    width 80% 
    will-change transform
    transform translate(-50%,100%)
    opacity 0.7
    transition:transform 350ms ease-out-back
    z-index -1
    &.pop 
        transform translate(-50%,65%)
        +above(1300px)
            transform translate(-50%,60%) 
    img
        width 100%
    +above(4)
        display block
    +above(400px) {
        width:60%;
    }
    +above(600px) {
        width:50%;
    }
    +above(800px) {
        width:40%;
    }
    +above(1000px) {
        width:25%;
    }
        
        
    
    

//      Content
.block
    center remify(1600)
    ta center
    &.half
        img
            height:100%
.cl-2
    center remify(1400)
    & > *            
        column:1/2
        height 100%
        +below(1300px)
            column:2/2
            padding 5%
            line-height 14px
        
        
//      Intro
.intro
    pos absolute 0 0 auto 0 
    width 100%
    bg darken($color-dark, 25%)
    pa $pad-small 20%
    cl #fff
    fs responsive $font-size-base $font-size-xxbig
    ff 'Varela Round'
    ta center
.intro2
    border-top 1px solid rgba(40,45,49,0.15)
    box-shadow 0px -2px 9px rgba(40,45,49,0.25)
    
    

    

// text
.txtx
    font-size:responsive $font-size-big $font-size-xxbig
.desc   
    ff $font-fam-condensed
    font-weight 700
    font-size:responsive $font-size-base $font-size-xbig
    padding-left $pad-tiny
    
.item
    padding 0.5%
    background rgba(255,255,255,0.5)
    border 1px solid rgba(40,45,49,0.4)
.waffle
    padding 5%
    &:after
        content ''
        clear both
        display block
    & > div
        waffle:1/3 3 5% no-flex
        +below(1024px)
            waffle:1/1 no-flex
            display block
            margin 2% auto !important
            float none !important
        img
            width 100%