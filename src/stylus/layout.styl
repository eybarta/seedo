body
    margin 0
    padding 0
    
    font-family:$font-fam-base
    & *
        box-sizing:border-box
.page
    box-shadow 0 -2px 18px rgba(240, 128, 128, 0.19)
    border-top 1px solid rgba(33, 33, 33, 0.1)
    min-height 100vh
    &:first-of-type
        height 100vh
    &:not(:first-of-type)
        padding-top 5.5rem
        +above(1300px)
            padding-top 10rem
//    min-height 36rem
    &.expand
        +below(1024px)
            padding-top 4rem 
            height auto
// half screen
.hh
    row 1/2 0
    img
        height 80%
    

        
        
    
.lcenter
    center 1200px no-flex
